@model BCX.Models.ViewModels.EmploymentViewModel



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Set Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="AddTask" asp-controller="Task" method="post">
                <div class="modal-body">
                    <input asp-for="EmployeeId" name="EmployeeId" id="EmployeeId" type="hidden"/>
             
                        <div class="row">
                            <label asp-for="HourWorked" class="form-inline"> Set Task Hours</label>
                            <input class="form-control"  asp-for="HourWorked" />
                        </div>
                    
             
                    <div class="row">
                            <label asp-for="Description" class="form-inline"> Task Description</label>
                            <textarea class="form-control"  asp-for="Description" />
                      </div>
                    

                    

                </div>
                <div class="modal-footer text-center">
                 
                    <a asp-controller="Task" asp-action="Tasks" asp-route-employeeId="@Model?.EmployeeId" class="btn btn-block btn-success"  >View Tasks</a>
                    <input type="submit" class="btn btn-block btn-primary" value="Save Task"/>
                </div>

            </form>
        </div>
    </div>
</div>