@model BCX.Models.LevelType



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Set Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="UpdateLevel" asp-controller="Level" method="post">
                <div class="modal-body">

                    <input class="form-control" asp-for="LevelTypeId" value="@Model.LevelTypeId" />
                    <div class="row">
                        <label asp-for="Description" class="form-inline"> Level Description</label>
                        <input class="form-control" asp-for="Description" value="@Model.Description" />
                    </div>


                    <div class="row">
                        <label asp-for="Price" class="form-inline"> Level Rate</label>
                        <input class="form-control" asp-for="Price" value="@Model.Price" />
                    </div>




                </div>
                <div class="modal-footer text-center">


                    <input type="submit" class="btn btn-block btn-primary" value="Save Level" />
                </div>

            </form>
        </div>
    </div>
</div>